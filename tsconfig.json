{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "useDefineForClassFields": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vite/client", "jest"],
    "paths": {
      "@/*": ["./src/*"],
      "@modules/*": ["./packages/*"]
    },
    "lib": ["esnext", "dom"]
  },
  "include": ["packages", "typings/components.d.ts", "global.d.ts"],
  "exclude": ["node_modules"]
}
